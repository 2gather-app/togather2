{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@icons/*": ["assets/Icons/*"],
      "@constants/*": ["constants/*"],
      "@components/*": ["components/*"],
      "@event/*": ["app/Event/*"]
    },
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
  ]
}
