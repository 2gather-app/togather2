{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
			"@assets/*": ["assets/*"],
      "@constants": ["src/constants/index.ts"],
      "@components": ["src/components/index.ts"],
      "@event/*": ["app/Event/*"],
			"@types": ["src/types/index.ts"],
			"@app/*": ["app/*"],
			"@helpers": ["src/helpers/index.ts"]
    },
		"types": ["@testing-library/jest-native", "jest"]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
  ]
}
